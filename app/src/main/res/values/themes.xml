        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorOnPrimary">@color/white_01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_dark</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>
        <item name="colorOnSecondary">@color/white_01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_light</item>
        <!-- Customize your theme here. -->
    </style>
<!--    splash screen-->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
